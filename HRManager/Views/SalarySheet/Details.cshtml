@model IEnumerable<HRManager.Models.ViewModel>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";


}



<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>@Resources.Content.SalarySheet</h3>
        </div>
        <div class="title_right">
            @if (HRManager.Common.setRole.Role_HR_update)
            {
            }
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="dtSalarySheetDetail" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="display:none">ID</th>
                                            <th>@Resources.Content.EmployeeCode</th>
                                            <th>@Resources.Content.Employee</th>
                                            <th>@Resources.Content.BaseSalary</th>
                                            <th>@Resources.Content.TotalDayWork</th>
                                            <th>@Resources.Content.TotalMoneyWork</th>
                                            <th>@Resources.Content.TotalHourOvertime</th>
                                            <th>@Resources.Content.TotalMoneyOvertime</th>
                                            <th>@Resources.Content.TotalHourSunday</th>
                                            <th>@Resources.Content.TotalMoneySunday</th>
                                            <th>@Resources.Content.TotalHourHoliday</th>
                                            <th>@Resources.Content.TotalMoneyHoliday</th>
                                            <th>@Resources.Content.HealthInsurance</th>
                                            <th>@Resources.Content.SocialInsurance</th>
                                            <th>@Resources.Content.UnemploymentInsurance</th>
                                            <th>@Resources.Content.TotalAllowance</th>
                                            <th>@Resources.Content.TotalSalary</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="display: none">@Html.DisplayFor(modelItem => item.employee.ID)</td>
                                                <td>@Html.DisplayFor(modelItem => item.employee.EmployeeCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.employee.FirstName) @Html.DisplayFor(modelItem => item.employee.FullName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.employee.Salary) </td>
                                                <td>@Html.DisplayFor(modelItem => item.timesheetDetail.totalDayWork) </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.salarySheetDetail.MoneyWork)
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => item.timesheetDetail.totalHourOvertime) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.MoneyOvertime) </td>
                                                <td>@Html.DisplayFor(modelItem => item.timesheetDetail.totalHourOvertimeSunday) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.MoneySunday) </td>
                                                <td>@Html.DisplayFor(modelItem => item.timesheetDetail.totalHourOvertimeHoliday) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.MoneyHoliday) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.BHYT) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.BHXH) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.BHTN) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.TotalAllowance) </td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheetDetail.TotalSalary) </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




