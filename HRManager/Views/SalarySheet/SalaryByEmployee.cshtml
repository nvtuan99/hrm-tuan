@model IEnumerable<HRManager.Models.ViewModel>
@{
    ViewBag.Title = "SalaryByEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>@Resources.Content.SalarySheet</h3>
        </div>

        <div class="title_right">
            @if (HRManager.Common.setRole.Role_HRCategory_update)
            {
                <button type="button" class="btn btn-info btn-xs" style="float:right" data-toggle="modal" data-target="#createNewSalarySheet"><i class="fa fa-plus"></i></button>
            }
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>@Resources.Content.Year</th>
                                            <th>@Resources.Content.Month</th>
                                            <th>@Resources.Content.DateCreated</th>
                                            <th>#</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheet.SalarySheetYear)</td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheet.SalarySheetMonth)</td>
                                                <td>@Html.DisplayFor(modelItem => item.salarySheet.DateCreate)</td>
                                                <td>
                                                    <a href="@Url.Action("SalaryByEmployeeDetails", "SalarySheet", new { id = item.salarySheet.ID })" class="btn btn-info btn-xs"><i class="fa fa-eye"></i>  </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


