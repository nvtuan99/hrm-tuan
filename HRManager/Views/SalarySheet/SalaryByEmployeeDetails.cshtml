@model IEnumerable<HRManager.Models.ViewModel>
@{
    ViewBag.Title = "SalaryByEmployeeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            @foreach (var item in Model)
            {
                <div class="x_title">
                    <h2> @Resources.Content.SalarySheet @Resources.Content.Month @item.salarySheet.SalarySheetMonth <span>/</span> @item.salarySheet.SalarySheetYear </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                        <table id="dtSalaryDetail" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th width="30%">@Resources.Content.ContentSalary</th>
                                    <th>@Resources.Content.Detail</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Resources.Content.BaseSalary</td>
                                    <td>@item.employee.Salary</td>
                                </tr>
                                <tr>
                                    <td>@Resources.Content.TotalDayWork <span>/</span> @Resources.Content.TotalMoneyWork</td>
                                    <td>@item.timesheetDetail.totalDayWork <span>/</span> @item.salarySheetDetail.MoneyWork</td>
                                </tr>

                                <tr>
                                    <td>@Resources.Content.TotalHourOvertime <span>/</span> @Resources.Content.TotalMoneyOvertime</td>
                                    <td>@item.timesheetDetail.totalHourOvertime <span>/</span> @item.salarySheetDetail.MoneyOvertime</td>
                                </tr>

                                <tr>
                                    <td>@Resources.Content.TotalHourSunday <span>/</span>@Resources.Content.TotalMoneySunday </td>
                                    <td>@item.timesheetDetail.totalHourOvertimeSunday <span>/</span>@item.salarySheetDetail.MoneySunday</td>
                                </tr>

                                <tr>
                                    <td>@Resources.Content.TotalHourHoliday <span>/</span>@Resources.Content.TotalMoneyHoliday </td>
                                    <td>@item.timesheetDetail.totalHourOvertimeHoliday <span>/</span>@item.salarySheetDetail.MoneyHoliday</td>
                                </tr>

                                <tr>
                                    <td>@Resources.Content.HealthInsurance </td>
                                    <td>@item.salarySheetDetail.BHYT</td>
                                </tr>
                                <tr>
                                    <td>@Resources.Content.SocialInsurance </td>
                                    <td>@item.salarySheetDetail.BHXH</td>
                                </tr>
                                <tr>
                                    <td>@Resources.Content.UnemploymentInsurance </td>
                                    <td>@item.salarySheetDetail.BHTN</td>
                                </tr>

                                <tr>
                                    <td>@Resources.Content.UnionDues </td>
                                    <td>@item.salarySheetDetail.UnionDues</td>
                                </tr>

                                <tr>
                                    <th>@Resources.Content.TotalAllowance</th>
                                    <th>@item.salarySheetDetail.TotalAllowance</th>
                                </tr>
                                <tr>
                                    <th>@Resources.Content.TotalSalary</th>
                                    <th>@item.salarySheetDetail.TotalSalary</th>
                                </tr>
                            </tbody>
                        </table>

                    </form>
                </div>
            }
        </div>
    </div>
</div>

