@model IEnumerable<HRManager.Models.ViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>@Resources.Content.EmployeeList</h3>
        </div>
        <div class="title_right">
            @if (HRManager.Common.setRole.Role_HR_update)
            {
                <button type="button" class="btn btn-info btn-xs" style="float:right" data-toggle="modal" data-target="#ExportEmployeeToExcelModal"><i class="fa fa-file-text-o"></i></button>
                <button type="button" class="btn btn-info btn-xs" style="float:right" data-toggle="modal" data-target="#uploadModal"><i class="fa fa-upload"></i></button>
                <a href="@Url.Action("Create","Employee")" class="btn btn-info btn-xs" style="float:right"><i class="fa fa-plus"></i></a>
            }
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="dtEmployee" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="display:none">ID</th>
                                            <th>@Resources.Content.Employee</th>
                                            <th>@Resources.Content.Gender</th>
                                            <th>@Resources.Content.PositionWork</th>
                                            <th>@Resources.Content.InformationContact</th>
                                            <th>#</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="display: none">@Html.DisplayFor(modelItem => item.employee.ID)</td>

                                                <td>
                                                    <div>
                                                        <i class="fa fa-user" style="color:darkgray"></i>
                                                        @Html.DisplayFor(modelItem => item.employee.FirstName) @Html.DisplayFor(modelItem => item.employee.FullName)
                                                    </div>
                                                    <div>
                                                        <i class="fa fa-info-circle" style="color:darkgray"></i>
                                                        @Html.DisplayFor(modelItem => item.employee.EmployeeCode)
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (item.employee.Gender == true)
                                                    {
                                                        <i class="fa fa-male" style="color:blue"></i>
                                                        <span>
                                                            Nam
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-female" style="color:red"></i>
                                                        <span>Nữ</span>
                                                    }
                                                </td>

                                                <td>
                                                    <div>
                                                        <i class="fa fa-sitemap" style="color:darkgray"></i>
                                                        @Html.DisplayFor(modelItem => item.department.NameDepartmentVN, new { @Value = ViewBag.Department })
                                                    </div>
                                                    <div>
                                                        <i class="fa fa-newspaper-o" style="color:darkgray"></i>
                                                        @Html.DisplayFor(modelItem => item.position.PositionNameVN, new { @Value = ViewBag.Department })
                                                    </div>
                                                </td>

                                                <td>
                                                    <div>
                                                        <i class="fa fa-birthday-cake" style="color:darkgray"></i>
                                                        @Html.DisplayFor(modelItem => item.employee.Birthday, new { @Value = ViewBag.Department })
                                                    </div>
                                                    <div>
                                                        @if (item.employee.Phone != "")
                                                        {
                                                            <i class="fa fa-phone" style="color:darkgray"></i>
                                                            @Html.DisplayFor(modelItem => item.employee.Phone, new { @Value = ViewBag.Department })
                                                        }
                                                    </div>
                                                    <div>
                                                        @if (item.employee.Email != "")
                                                        {
                                                            <i class="fa fa-inbox" style="color:darkgray"></i>
                                                            @Html.DisplayFor(modelItem => item.employee.Email, new { @Value = ViewBag.Department })
                                                        }
                                                    </div>
                                                </td>

                                                <td>
                                                    <a href="@Url.Action("EmployeeView", "Employee", new { id = @item.employee.ID })" class="btn btn-info"><i class="fa fa-pencil"></i>  </a>
                                                    <a href="" class="btn btn-danger" onclick="return confirmDelete(@item.employee.ID);"><i class="fa fa-trash-o"></i>  </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                    <tfoot>
                                        <tr>
                                            <th style="display:none">ID</th>
                                            <th>@Resources.Content.FullName</th>
                                            <th>@Resources.Content.Gender</th>
                                            <th>@Resources.Content.Position</th>
                                            <th>@Resources.Content.InformationContact</th>
                                            <th>#</th>
                                        </tr>
                                    </tfoot>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@*upload data from excel to tblEmployee*@
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div style="float:right;padding-right:10px">
                    <a href="/Employee/DownloadExcel/"><img src="~/Uploads/Images/IconExcel.png" width="25" height="25" title="Download Excel format" alt="excel" /></a>
                </div>
                <h5 class="modal-title" id="uploadModalLabel">Upload Excel File</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form to select and upload Excel file -->
                @using (Html.BeginForm("Upload", "Employee", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadForm" }))
                {
                    <div class="form-horizontal">
                        <div class="form-group" name="Fichier1">
                            <!-- COMPONENT START -->
                            <div class="form-group">
                                <div class="input-group input-file">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default btn-choose" type="button" onchange="">File Excel</button>
                                    </span>
                                    <input type="text" class="form-control" placeholder='Chọn file dữ liệu...' />

                                </div>
                            </div>
                            @*<input type="file" id="dataFile" name="upload" />*@

                        </div>

                        <div class="form-group" style="float:right">
                            <input type="submit" value="Upload" class="btn btn-info" id="submitButton" disabled />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@*Export data to excel *@
<div class="modal fade" id="ExportEmployeeToExcelModal" tabindex="-1" role="dialog" aria-labelledby="ExportEmployeeToExxel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ExportEmployeeToExxel">Export data to Excel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form to select and upload Excel file -->
                @using (Html.BeginForm("Export", "Employee", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-horizontal">
                        <div class="form-group" name="Fichier1">
                            <!-- COMPONENT START -->
                            <div class="col-md-12 col-sm-12  form-group has-feedback">
                                <label>@Resources.Content.Company</label>
                                @Html.DropDownList("CompanyID", new SelectList(ViewBag.ExportCompanyList, "Value", "Text"), new { @class = "form-control" })
                            </div>

                            <div class="col-md-12 col-sm-12  form-group has-feedback">
                                <label>@Resources.Content.Department</label>
                                @*@Html.DropDownList("DepartmentID", new SelectList(ViewBag.ExportDepartmentList, "Value", "Text"), new { @class = "form-control" })*@
                                @Html.ListBox("DepartmentID", new MultiSelectList(ViewBag.ExportDepartmentList, "Value", "Text")
                                  , new
                                  {
                                      @class = "chzn-select form-control",
                                      @data_placeholder = "Choose Department...",
                                  }
                                 )
                            </div>
                        </div>

                        <div class="form-group" style="float:right">
                            <input type="submit" value="Export" class="btn btn-info" id="exportButton" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



