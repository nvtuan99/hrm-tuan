@model HRManager.UserProfile
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@Resources.Content.Update @Resources.Content.Account</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">@Resources.Content.Account</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <br />
                            <br />
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                    @Resources.Content.LoginAccount <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" name="UserName" class="form-control" placeholder="@Resources.Content.UserAccount">
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                    @Resources.Content.EmployeeCode <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.DropDownListFor(model => model.EmployeeID, (IEnumerable<SelectListItem>)ViewBag.EmployeeList, "Mã nhân viên", new { @class = "form-control search-select", @id = "EmployeeID", @name = "EmployeeID" })
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                    @Resources.Content.FullName
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" readonly value="@ViewBag.Fullname" id="Fullname" name="Fullname" class="form-control" placeholder="Tên nhân viên">
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                    @Resources.Content.Department
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" value="@ViewBag.Department" id="DepartmentID" readonly name="DepartmentID" class="form-control" placeholder="Phòng ban">
                                </div>
                            </div>

                            @*<div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                        @Resources.Content.Status
                                    </label>
                                    <div class="col-md-6 col-sm-6 ">
                                        <select class="form-control" name="isActive">
                                            <option selected value="1">@Resources.Content.Active</option>
                                            <option value="0">@Resources.Content.InActive</option>
                                        </select>
                                    </div>
                                </div>*@

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                    @Resources.Content.RoleManager
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input class="form-control" style="width:18px;" type="checkbox" id="isManagement" name="isManagement">
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
                                    @Resources.Content.Password <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="password" min="8" name="Password" class="form-control" placeholder="@Resources.Content.Password">
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button type="submit" class="btn btn-success">@Resources.Content.Save</button>
                                    <button class="btn btn-primary" type="button">@Resources.Content.Cancel</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}




