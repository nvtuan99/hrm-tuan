@model IEnumerable<HRManager.Models.ViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="overflow-x-scroll">
    <div class="row">
        <div class="columnEmployee">
            <table id="dtAllowance" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th style="display:none">ID</th>
                        <th>@Resources.Content.Employee</th>
                        <th>@Resources.Content.PositionWork</th>
                        <th>@Resources.Content.BaseSalary</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="selectable-row">
                            <td style="display: none">@Html.DisplayFor(modelItem => item.employee.ID)</td>
                            <td>
                                <div>
                                    <i class="fa fa-user" style="color:darkgray"></i>
                                    @Html.DisplayFor(modelItem => item.employee.FirstName) @Html.DisplayFor(modelItem => item.employee.FullName)
                                </div>
                                <div>
                                    <i class="fa fa-info-circle" style="color:darkgray"></i>
                                    @Html.DisplayFor(modelItem => item.employee.EmployeeCode)
                                </div>
                            </td>
                            <td>
                                <div>
                                    <i class="fa fa-sitemap" style="color:darkgray"></i>
                                    @Html.DisplayFor(modelItem => item.department.NameDepartmentVN, new { @Value = ViewBag.Department })
                                </div>
                                <div>
                                    <i class="fa fa-newspaper-o" style="color:darkgray"></i>
                                    @Html.DisplayFor(modelItem => item.position.PositionNameVN, new { @Value = ViewBag.Department })
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.employee.Salary)</td>
                            <td>
                                <button id="edit-button" type="button" class="btn btn-info edit-button" style="float:right" data-toggle="modal" data-target="#updateAllowance" data-id="@item.employee.ID">
                                    <i class="fa fa-edit"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="columnAllowance">
            <table id="allowanceDetailTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Resources.Content.Allowance</th>
                        <th>@Resources.Content.Money</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dữ liệu chi tiết sẽ được thêm vào đây bằng JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade bs-example-modal-lg" id="updateAllowance" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title" id="uploadModalLabel">@Resources.Content.Update @Resources.Content.Allowance</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form to select and upload Excel file -->
                @using (Html.BeginForm("Update", "Allownce", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadForm" }))
                {
                    <input type="hidden" id="modalId" name="modalId" />

                    <div class="form-horizontal">

                        <div class="col-md-12 col-sm-12  form-group has-feedback">
                            <div class="col-md-6 col-sm-6">
                                <label>@Resources.Content.EmployeeCode</label>
                                <input type="text" readonly id="EmployeeCode" name="EmployeeCode" required class="form-control" placeholder="@Resources.Content.EmployeeCode">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label>@Resources.Content.FullName</label>
                                <input type="text" readonly id="Fullname" name="Fullname" required class="form-control" placeholder="@Resources.Content.EmployeeCode">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label>@Resources.Content.Department</label>
                                <input type="text" readonly id="Department" name="Department" required class="form-control" placeholder="@Resources.Content.EmployeeCode">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <label>@Resources.Content.Position</label>
                                <input type="text" readonly id="Position" name="Position" required class="form-control" placeholder="@Resources.Content.EmployeeCode">
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="col-md-9 col-sm-9">
                                    <label>@Resources.Content.SalaryBasic</label>
                                    <input type="number" id="SalaryBasic" name="SalaryBasic" required class="form-control" placeholder="@Resources.Content.SalaryBasic">
                                </div>
                                <div class="col-md-3 col-sm-3">
                                    <label style="visibility:hidden">@Resources.Content.Update</label>
                                    <a href="" id="updateSalaryBasic" class="btn btn-info btn-xs"><i class="fa fa-save"></i> </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12  form-group has-feedback">
                            <table id="dtmodalAllowance" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Resources.Content.Allowance</th>
                                        <th>@Resources.Content.Money</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <thead>
                                    <tr>
                                        <td>
                                            @Html.DropDownList("AllowanceCategoryID", (IEnumerable<SelectListItem>)ViewBag.AllowanceCategory, "Chọn dữ liệu", new { @class = "form-control", id = "AllowanceCategoryID" })
                                        </td>
                                        <td>
                                            <input type="text" readonly id="modelMoney" class="form-control" />
                                        </td>

                                        <td>
                                            @if (HRManager.Common.setRole.Role_Salary_update)
                                            {
                                                <input type="button" id="btnAddAllowance" value="@Resources.Content.Add" class="btn btn-primary" />
                                            }
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


